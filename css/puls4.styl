azul = #22BCE0
gris_texto = #7a7a7a
gris_oscuro = #444
naranja = #dd4f24


body
    background #e8e8e8
    color gris_oscuro
    font-family Arial
    font-size 16px

header
	
    background gris_oscuro
    color white
    padding 0.5em
    position relative
    overflow hidden
    box-shadow 0 5px 0rgba(0,0,0,0.2)
    z-index 55

    .logo
      border-right 1px solid azul
      width 60px 
        
      img
      	width 52px

    .titular
    	margin 0 80px 0 70px
    	.filtro
    		color azul
    		font-size 14px
    		font-style italic
    		font-weight bold
    		text-decoration none

    	.publicar
    		background naranja
    		color white
    		font-style italic
    		padding 0.2em 0.5em
    		text-decoration none
    		float right
    		text-shadow 1px 1px 0px black

    	.titulo
    		font-size 18px
    		font-weight normal
    		margin 0
    		padding 0

    .usuario
    	position absolute
    	top 10px
    	right 10px

    	.avatar
    		margin 0 1.1em 0 0
    		position relative
    		z-index 2
    		img
    			width 50px
    			border-radius 50%
    	.flechita
    		background naranja
    		color white
    		display block
    		padding 2px
    		text-align right
    		text-decoration none
    		width 50%
    		position absolute
    		top 15px
    		right 0
    		z-index 0


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		left 0
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0 
		padding 0
		overflow-x auto
		white-space nowrap


		li
			display inline-block

			a 
				color white
				text-decoration none
				display block
				margin 0 0.5em
				padding 0 1em
				


.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto

		.acciones
			border-top 3px solid azul
		.descripcion
			.deetalles
				height 160px
				margin-left 170px

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
			.imagen
				float left
				img
					height 160px
					width 120px
					vertical-align top
		
a 
	color naranja

.left
	float left

.right
    float right